<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<Pane styleClass="credits-borderWhitePane" BorderPane.alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/10.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.credits.wallet.desktop.controller.WalletController">
    <VBox layoutX="20.0" layoutY="100.0" prefHeight="380.0" prefWidth="550.0">
        <HBox>
            <Label prefHeight="38.0" prefWidth="543.0" style="-fx-font-size: 26px;" text="My wallet:"/>
        </HBox>
        <HBox prefHeight="56.0" prefWidth="550.0">
            <Label fx:id="publicWalletID" alignment="BOTTOM_LEFT" maxHeight="42.0" minWidth="0.0"
                   prefHeight="42.0" prefWidth="535.0" style="-fx-font-size: 16; -fx-font-weight: bold;"
                     text="ID" wrapText="true">
            </Label>
            <Button alignment="BOTTOM_LEFT" onAction="#handleCopy" prefHeight="54.0" prefWidth="52.0"
                    style="-fx-border-color: transparent;" styleClass="credits-button">
                <graphic>
                    <ImageView fitHeight="26.0" fitWidth="26.0">
                        <Image url="@../img/copy.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
        <Pane minHeight="20.0" prefHeight="26.0" prefWidth="550.0">
            <Button layoutX="504.0" layoutY="-10.0" minHeight="40.0" minWidth="40.0"
                    onAction="#handleRefreshBalance" prefHeight="40.0" prefWidth="40.0"
                    style="-fx-border-color: transparent;" styleClass="credits-button-refresh">
                <graphic>
                    <ImageView fitHeight="32.0" fitWidth="32.0">
                        <Image url="@../img/reload.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Label layoutX="-13.0" prefHeight="25.0" prefWidth="100.0" style="-fx-font-size: 16px;"
                   text="   My coins"/>
        </Pane>
        <TableView fx:id="coinsTableView" maxHeight="305.0" maxWidth="548.0" minHeight="144.0" minWidth="389.0"
                   prefHeight="276.0" prefWidth="550.0" styleClass="credits-smart-table-view"/>
    </VBox>
    <Button layoutX="20.0" layoutY="580.0" onAction="#handleLogout" prefHeight="60.0" prefWidth="60.0"
            style="-fx-font-size: 22px;" styleClass="credits-button">
        <graphic>
            <ImageView fitHeight="26.0" fitWidth="26.0">
                <Image url="@../img/arrow_down.png"/>
            </ImageView>
        </graphic>
    </Button>
    <Button layoutX="20.0" layoutY="484.0" onAction="#handleAddCoin" prefHeight="45.0" prefWidth="177.0"
            style="-fx-background-color: #404040; -fx-text-fill: white;" styleClass="credits-button"
            text="Make new coin"/>

    <Label layoutX="20.0" styleClass="credits-topLabelText" text="Wallet"/>
    <Label layoutX="20.0" layoutY="30.0" styleClass="credits-topLabelGrayText"
           text="On this form you can make payments in the Credits platform"/>
    <Button fx:id="btnBack" layoutX="1036.0" layoutY="580.0" onAction="#handleGenerate" prefHeight="60.0"
            prefWidth="250.0" styleClass="credits-button" text="GENERATE TRANSACTION"/>
    <Label fx:id="coinsErrorLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="362.0" layoutY="492.0"
           prefHeight="30.0" prefWidth="208.0" styleClass="credits-labelError"/>
    <VBox layoutX="650.0" layoutY="110.0" maxHeight="450.0" minHeight="392.0" prefHeight="392.0" prefWidth="615.0">
        <Label styleClass="credits-not-padding-label" text="To address which opened on Credits (only)">
        </Label>
        <TextField fx:id="addressField" maxHeight="45.0" minHeight="45.0" prefHeight="45.0" prefWidth="605.0"
                   promptText="Put address here" styleClass="credits-textField"/>
        <Label fx:id="addressErrorLabel" maxHeight="45.0" minHeight="20.0" prefHeight="30.0"
               styleClass="credits--not-padding-labelError"/>
        <Label styleClass="credits-not-padding-label" text="Amount">
        </Label>
        <HBox prefHeight="35.0" prefWidth="615.0">
            <TextField fx:id="amountField" maxHeight="45.0" minHeight="45.0" prefHeight="45.0" prefWidth="350.0"
                       promptText="Put amount here" styleClass="credits-textField"/>
        </HBox>
        <Label fx:id="amountErrorLabel" maxHeight="45.0" minHeight="20.0" prefHeight="30.0"
               styleClass="credits--not-padding-labelError"/>
        <Label styleClass="credits-not-padding-label" text="Transaction Fee in CS">
        </Label>
        <HBox prefHeight="32.0" prefWidth="615.0">
            <TextField fx:id="feeField" maxHeight="45.0" minHeight="45.0" minWidth="350.0" prefHeight="45.0"
                       prefWidth="350.0" promptText="(0.01 - 0.03 - Recomended)"
                       styleClass="credits-textField"/>
            <Label prefHeight="45.0" prefWidth="98.0" styleClass="credits-label" text="Actual:"/>
            <Label fx:id="actualOfferedMaxFeeLabel" prefHeight="45.0" prefWidth="214.0"
                   styleClass="credits-label" text="0" textFill="#0000008e">
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
            </Label>
        </HBox>
        <Label fx:id="feeErrorLabel" maxHeight="45.0" minHeight="20.0" prefHeight="30.0"
               styleClass="credits--not-padding-labelError"/>
        <Label styleClass="credits-not-padding-label"
               text="Send text (it's not free). It is not necessary to fill in">
        </Label>
        <TextField fx:id="transText" maxHeight="45.0" minHeight="45.0" prefHeight="56.0" prefWidth="605.0"
                   promptText="Put text here" styleClass="credits-textField"/>
    </VBox>
    <Separator layoutX="620.0" layoutY="100.0" orientation="VERTICAL" prefHeight="450.0" prefWidth="0.0"/>
</Pane>
