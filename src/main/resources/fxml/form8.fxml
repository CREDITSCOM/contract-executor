<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.credits.wallet.desktop.controller.Form8Controller" maxHeight="-Infinity"
            fx:id="bp"
            prefHeight="700.0" prefWidth="1300.0"
            maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" BorderPane.alignment="TOP_CENTER">
    <top>
        <fx:include source="header.fxml"/>
    </top>
    <center>
        <Pane
                styleClass="credits-borderWhitePane" BorderPane.alignment="TOP_CENTER">
            <children>
                <Label layoutX="30.0" layoutY="23.0"
                       styleClass="credits-topLabelText"

                       text="8. Your transaction send successfully">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label layoutX="30.0" layoutY="88.0"
                       styleClass="credits-topLabelGrayText"

                       text="On this form you can open the wallet and make payments in the Credits platform"/>
                <Line endX="-50.0" layoutX="130.0" layoutY="75.0"
                      startX="-100.0" stroke="#ecb32e" strokeWidth="4.0"/>
                <Button fx:id="btnBack" layoutX="50.0" layoutY="600.0"
                         onAction="#handleSeeOnMonitor"
                        prefHeight="60.0" prefWidth="250.0"
                        styleClass="credits-button"
                        text="SEE ON CREDITS MONITOR"/>
                <Label fx:id="toAddress" layoutX="30.0" layoutY="250.0"
                       prefHeight="25.0" prefWidth="495.0"
                       styleClass="credits-label">
                </Label>
                <Button fx:id="btnOk" layoutX="375.0" layoutY="600.0"
                         onAction="#handleOk"
                        prefHeight="60.0" prefWidth="250.0"
                        styleClass="credits-button" text="OK"/>
                <Label layoutX="30.0" layoutY="225.0" styleClass="credits-label"
                       text="To address">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Label>
                <Label layoutX="30.0" layoutY="325.0" styleClass="credits-label"
                       text="Amount">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Label>
                <Label fx:id="amountInCs" layoutX="30.0" layoutY="350.0"
                       style="-fx-font-size: 16px;" styleClass="text"
                       text="0">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Label>
                <Label layoutX="30.0" layoutY="425.0" styleClass="credits-label"
                       text="Transaction fee">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Label>
                <Label fx:id="transactionFeeValue" layoutX="30.0"
                       layoutY="450.0" styleClass="credits-label"
                       text="0">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Label>
                <Label layoutX="30.0" layoutY="165.0"
                       style="-fx-font-size: 20; -fx-font-weight: bold;"
                       styleClass="text"
                       text="Transaction details:">
                </Label>
            </children>
        </Pane>
    </center>
</BorderPane>